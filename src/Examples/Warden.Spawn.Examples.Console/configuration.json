{
  "wardenName": "Warden Spawn",
  "interval": "00:00:03",
  "logger": {
    "type": "console",
    "configuration": {
      "useColors": true,
      "minLevel":  "all"  
    }  
  }, 
  "integrations": [
    {
      "type": "sendGrid",
      "configuration": {
        "apiKey": "xyz",
        "sender": "spawn@getwarden.net",
        "defaultSubject": "Monitoring",
        "defaultMessage": "Monitoring error(s).",
        "defaultReceivers": [ "warden-spawn@mailinator.com" ]
      }
    },
    {
      "type": "console",
      "configuration": {
        "defaultText": "Hello!"
      }
    }
  ],
  "watchers": [
    {
      "type": "Web",
      "name": "My Web Watcher",
      "group": "Websites",
      "configuration": {
        "url": "https://getwarden.net",
        "timeout": "00:00:05",
        "request": {
          "method": "get",
          "headers": [
            {
              "name": "User-Agent",
              "value": "Warden Spawn"
            }
          ]
        },
        "skipStatusCodeValidation":  true 
      },
      "hooks": [
        {
          "type": "onCompleted",
          "condition": "invalidCheck",
          "use": "sendGrid",
          "configuration": {
            "receivers": [ "warden-spawn2@mailinator.com" ]
          }
        },
        {
          "type": "onCompletedAsync",
          "condition": "invalidCheck",
          "use": "sendGrid",
          "configuration": {
            "subject": "Monitoring async",
            "message": "Monitoring error(s) async."
          }
        },
        {
          "type": "onCompleted",
          "condition": "none",
          "use": "console",
          "configuration": {
          }
        },
        {
          "type": "onCompletedAsync",
          "condition": "none",
          "use": "console",
          "configuration": {
            "text": "Hello async!"
          }
        }
      ]
    }
  ],
  "hooks": [
    {
      "type": "onIterationCompleted",
      "condition": "invalidCheck",
      "use": "console",
      "configuration": {
      }
    },
    {
      "type": "onIterationCompletedAsync",
      "condition": "invalidCheck",
      "use": "console",
      "configuration": {
        "text": "Iteration hello async!"
      }
    }
  ],
  "globalWatcherHooks": [
    {
      "type": "onCompletedAsync",
      "condition": "invalidCheck",
      "use": "sendGrid",
      "configuration": {
        "subject": "Monitoring async global hook",
        "message": "Monitoring error(s) global hook async."
      }
    }
  ],
  "aggregatedWatcherHooks": [
    {
      "type": "onCompletedAsync",
      "condition": "invalidCheck",
      "use": "sendGrid",
      "configuration": {
        "subject": "Monitoring async aggregated hook",
        "message": "Monitoring error(s) aggregated hook async."
      }
    }
  ]
}